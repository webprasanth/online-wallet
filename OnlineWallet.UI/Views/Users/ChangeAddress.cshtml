@model OnlineWallet.Infrastructure.Commands.Users.ChangeAddress

<div class="col-md-6 col-md-offset-3">
    <form asp-action="ChangeAddress" class="form-horizontal">
        <fieldset>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Address" class="col-md-3 control-label">Address</label>
                <div class="col-md-6">
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address" style="cursor: auto;" autocomplete="off">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6 col-md-offset-3">
                    <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>