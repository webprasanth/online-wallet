@model OnlineWallet.Infrastructure.Commands.Users.ChangePassword

<div class="col-md-6 col-md-offset-3">
    <div class="jumbotron">
        <form asp-action="ChangePassword" class="form-horizontal">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentPassword" class="col-md-3 control-label">Current password</label>
                    <div class="col-md-6">
                        <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Current password" style="cursor: auto;" autocomplete="off">
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="col-md-3 control-label">New password</label>
                    <div class="col-md-6">
                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="New password" style="cursor: auto;" autocomplete="off">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="col-md-3 control-label">Confirm password</label>
                    <div class="col-md-6">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Retype new password" style="cursor: auto;" autocomplete="off">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>