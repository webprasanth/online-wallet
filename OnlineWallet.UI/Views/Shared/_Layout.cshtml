<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Online Wallet</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/superhero/bootstrap.css" />
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand">Online Wallet</span>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    @if (await AuthorizationService.AuthorizeAsync(User, "UserOnly"))
                    {
                        <li><a asp-controller="User" asp-action="Index">User</a></li>
                    }
                    
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (await AuthorizationService.AuthorizeAsync(User, "UserOnly"))
                    {
                        <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    @if (!await AuthorizationService.AuthorizeAsync(User, "UserOnly"))
                    {
                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>   
                    }
                </ul>
            </div>
        </div>
    </nav>

<div>
    @RenderBody()
</div>

    @RenderSection("scripts",false)
</body>
</html>
