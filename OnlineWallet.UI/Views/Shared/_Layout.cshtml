<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Online Wallet</title>

    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/superhero/bootstrap.css" />
</head>

<body>
    <div id="wrapper">
        <div>
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navBar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <span class="navbar-brand">Online Wallet</span>
                </div>

                <div class="collapse navbar-collapse" id="navBar">
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Users" asp-action="Index">Profile</a></li>
                            <li><a asp-controller="Users" asp-action="Activity">Transactions</a></li>
                            <li><a asp-controller="Users" asp-action="Dashboard">Dashboard</a></li>
                            <li><a asp-controller="Transactions" asp-action="Deposit">Deposit</a></li>
                            <li><a asp-controller="Transactions" asp-action="Transfer">Transfer</a></li>
                            <li><a asp-controller="Transactions" asp-action="Withdraw">Withdraw</a></li>
                        }

                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="/swagger">API</a></li>
                            <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                            <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
        <div>
            @RenderBody()
        </div>
        <div id="push"></div>
    </div>

    <footer class="footer">
        <div class="container">
            <a href="https://github.com/bartMoskala/online-wallet"><span class="text-info">GitHub</span></a>
        </div>
    </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/script.js"></script>
    </environment>
    <environment names="Production">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/_app/script.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>