<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Online Wallet</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/superhero/bootstrap.css" />
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <span class="navbar-brand">Online Wallet</span>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    @if ( User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Users" asp-action="Index">Profile</a></li>
                        <li><a asp-controller="Transactions" asp-action="Deposit">Deposit</a></li>
                        <li><a asp-controller="Transactions" asp-action="Transfer">Transfer</a></li>
                        <li><a asp-controller="Transactions" asp-action="Withdraw">Withdraw</a></li>
                    }
                    
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

<div>
    @RenderBody()
</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/js/script.js"></script>
    @RenderSection("scripts",false)
</body>
</html>
